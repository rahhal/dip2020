{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>  جرد مادة: {{ inventory.article }} </h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table class="table">
                                    <tbody>
                                    {#<tr>
                                        <th>Date</th>
                                        <td>{{ inventory.date ? inventory.date|date('Y-m-d') : '' }}</td>
                                    </tr>#}
                                    <tr>
                                        <th>{{ "Article"|trans }}</th>
                                        <td>{{ inventory.article }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ " Qty inventory"|trans }}</th>
                                        <td>{{ inventory.qtyInv }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ " Qty stock"|trans }}</th>
                                        <td>{{ inventory.qtyStk }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "State"|trans }}</th>
                                        <td>{{ inventory.state }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                                <div class="form-group">
                                    <div class="col-md-2 col-sm-2 col-xs-2 col-md-offset-3">
                                        {{ include('inventory/_delete_form.html.twig') }}
                                    </div>
                                    <a href="{{ path('inventory_edit', {'id': inventory.id}) }}" class="btn btn-primary"><i class="fa fa-edit" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                    <a href="{{ path('inventory_index') }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}

