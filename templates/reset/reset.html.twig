{% extends 'base.html.twig' %}

{% block title %}تسجيل الدخول{% endblock %}
{% block body_class %} class="login" {% endblock %}
{% block body %}
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <a class="hiddenanchor" id="reset"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <h1>تغيير كلمة العبور</h1>
                    {{ form_start(form_reset, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                    <div>
                        {{ form_widget(form_reset.email,{'attr': {'class':'form-control', 'placeholder': 'البريد الإلكتروني'} }) }}
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default submit">تغيير كلمة العبور</button>
                        <a class="reset_pass" href="{{ path('app_login') }}">ارسال</a> </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />
                        <div>
                            <p>©2019 كل الحقوق محفوظة</p>
                        </div>
                    </div>
                    {{ form_end(form_reset) }}
                </section>
            </div>
        </div>
    </div>
{% endblock %}
