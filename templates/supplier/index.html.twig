

{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Supplier"|trans }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2> {{ "Supplier liste"|trans }}</h2>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('supplier_new') }}" class="btn btn-success"><i class="fa fa-plus" style="margin-left: 2rem"></i>{{ "Create new"|trans }}</a>
                                </p>
                                    <table  id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ "Id"|trans }}</th>
                                        <th>{{ "Company"|trans }}</th>
                                        <th>{{ "Name"|trans }}</th>
                                        <th>{{ "Activity"|trans }}</th>
                                        <th>{{ "Tax_number"|trans }}</th>
                                        <th>{{ "Phone"|trans }}</th>
                                        <th>{{ "Address"|trans }}</th>
                                        <th>{{ "Email"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for supplier in suppliers %}
                                        <tr>
                                            <td>{{ supplier.id }}</td>
                                            <td>{{ supplier.company }}</td>
                                            <td>{{ supplier.name }}</td>
                                            <td>{{ supplier.activity }}</td>
                                            <td>{{ supplier.taxNumber }}</td>
                                            <td>{{ supplier.phone }}</td>
                                            <td>{{ supplier.address }}</td>
                                            <td>{{ supplier.email }}</td>
                                            <td>
                                                <a href="{{ path('supplier_show', {'id': supplier.id}) }}"  class="btn btn-primary btn-block"><i class="fa fa-eye" style="margin-left: 2rem"></i>{{  "show" | trans }}</a>
                                                <a href="{{ path('supplier_edit', {'id': supplier.id}) }}" class="btn btn-warning btn-block"><i class="fa fa-edit" style="margin-left: 2rem"></i>{{  "edit" | trans }}</a>

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">{{ "no records found"|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
