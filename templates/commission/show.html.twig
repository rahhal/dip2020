

{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Show details of:"| trans }}{{ commission.employee }}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table class="table table-hover">
                                    <tbody>
                                    <tr>
                                        <th>  {{ "Date"| trans }}</th>
                                        <td>{{ commission.date ? commission.date|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Fullname"| trans }}</th>
                                        <td>{{ commission.employee }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Activity"| trans }}</th>
                                        <td>{{ commission.employee.activity }}</td>
                                    </tr>

                                    </tbody>
                                </table>

                                    <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-2 col-sm-2 col-xs-2 col-md-offset-3">
                                            {{ include('commission/_delete_form.html.twig') }}
                                        </div>
                                            <a href="{{ path('commission_edit', {'id': commission.id}) }}" class="btn btn-primary"><i class="fa fa-edit" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                            <a href="{{ path('commission_new') }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>

{% endblock %}
