
 {% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "List of exit"|trans }}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                           
                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('ajout-exitt') }}" class="btn btn-success"><i class="fa fa-plus" style="margin-left: 2rem"></i>{{ "Create new"|trans }}</a>
                                </p>
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ "Date"|trans }}</th>
                                        <th>{{ "Reference exit"|trans }}</th>
                                        <th>{{ "Benificiary"|trans }}</th>
                                        <th>{{ "Total price"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for exitt in exitts %}
                                        <tr>
                                            <td>{{ exitt.date ? exitt.date|date('Y-m-d') : '' }}</td>
                                            <td>{{ exitt.number }}</td>
                                            <td>{{ exitt.employee }}</td>
                                            <td>{{ exitt.TotalPrice }}</td>
                                            <td>
                                                <a href="{{ path('exitt_show', {'id': exitt.id}) }}" class="btn btn-default" data-toggle="popover">{{ "show"|trans }}</a>
                                                <a href="{{ path('modifier-exitt', {'id': exitt.id}) }}" class="btn btn-primary">{{ "edit"|trans }}</a>
                                                <a href="{{ path('lineExitt_detail', {'id': exitt.id}) }}" class="btn btn-info">{{ "detail"|trans }}</a>
                                                <a href="{{ path('exitt_pdf', {'id': exitt.id}) }}" target="_blank" class="btn btn-danger">{{ "print"|trans }}</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">{{ "no records found"|trans }}</td>
                                        </tr>

                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
    <div id="lock_screen">
        <table>
            <tr>
                <td>
                    <div class="clock"></div>
                    <span class="unlock">
                    <span class="fa-stack fa-5x">
                      <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                      <i id="icon_lock" class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                </span>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
