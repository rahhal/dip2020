<form method="post" action="{{ path('line_stock_delete', {'id': line_stock.id}) }}" onsubmit="return confirm('هل انت متأكد انك ترغب في حذف هذا العنصر؟');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ line_stock.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash " style="margin-left: 2rem"></i>{{ "Delete"|trans }}</button>
</form>
