{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}

    <div hidden id="template_tmp">
        <div id="demand_lineDemand___name__">
            <label class="required">__name__label__</label>
            <div class="row">
                <div class="col-md-3">
                    <label for="demand_lineDemand___name___article" class="required ">المادة</label><select
                            id="demand_lineDemand___name___article" class="form-control"
                            name="demand[lineDemands][__name__][article]">
                        {% for article in articles %}
                            <option value="{{ article.id }}">{{ article.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="demand_lineDemand___name___quantity" class="required"> الكمية  </label>
                    <input type="text" id="demand_lineDemand___name___quantity" class=" form-control"
                           name="demand[lineDemands][__name__][quantity]" required="required"/>
                </div>

                <div class="col-md-3">
                    <label for="demand_lineDemand___name___remarque" class="required">ملاحظة</label>
                    <input type="text" id="demand_lineDemand___name___remarque" class=" form-control"
                           name="demand[lineDemands][__name__][remarque]"
                           required="required"/>
                </div>

                <div class="col-md-1">
                    <label></label>
                    <a href="#" class="btn btn-danger" id="btn-delete">حذف</a>
                </div>
            </div>

        </div>
    </div>

    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Create new demand"|trans }}</h3>
                    </div>
                </div>

                <div class="clearfix">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>{{ "Create new demand"|trans }}
                                    </h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <br/>
                                    {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}

                                    <fieldset>
                                        <div class="row">
                                            <div class="well">

                                                {#{{ form_row(form.date) }}#}
                                                <div class="form-group">
                                                    {{ form_label(form.date, "Date"|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                                    {{ form_errors(form.date) }}
                                                    <div class="col-sm-6">
                                                        {{ form_widget(form.date) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    {# Génération du label. #}
                                                    {{ form_label(form.supplier, "المزود", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                                    {# Affichage des erreurs pour ce champ précis. #}
                                                    {{ form_errors(form.supplier) }}
                                                    <div class="col-sm-6">
                                                        {# Génération de l'input. #}
                                                        {{ form_widget(form.supplier, {'attr': {'class': 'form-control'}}) }}
                                                    </div>
                                                </div>
                                                {# Idem pour un autre champ. #}
                                                <div class="form-group">
                                                    {{ form_label(form.tranche, "القسط", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                                    {{ form_errors(form.tranche) }}
                                                    <div class="col-sm-6">
                                                        {{ form_widget(form.tranche, {'attr': {'class': 'form-control'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="row">
                                            <div class="well">

                                                <div id="demand_lineDemand"></div></br>
                                                <a href="#" id="add_lineDemand" class="btn btn-success m-10">{{ "Add article"|trans }}</a>

                                            </div>
                                        </div>
                                    </fieldset>
                                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                    {{ form_widget(form._token) }}
                                    {{ form_end(form, {'render_rest': false}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% include('layouts/footer.html.twig') %}
            </div>
        </div>
    </div>


{% endblock %}


