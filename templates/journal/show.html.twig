
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3> ملخص التقرير اليومي للأكلة  بتاريخ: {{ journal.date? journal.date|date('Y-m-d') : ''}}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th> {{ "Date"|trans }}</th>
                                        <td>{{ journal.date ? journal.date|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th> {{ "Total meals"|trans }}</th>
                                        <td>{{ journal.totalMeals }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Total costs"|trans }}</th>
                                        <td>{{ journal.totalCosts }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Unit meal costs"|trans }}</th>
                                        <td>{{ journal.unitCost }} </td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Remarque"|trans }}</th>
                                        <td>{{ journal.remarque }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                               {# <div class="form-group col-lg-12">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        #}{#<a href="{{ path('journal_edit', {'id': journal.id}) }}" class="btn btn-success"><i class="fa fa-edit" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>#}{#
                                        <a href="{{ path('journal_index') }}" class="btn btn-primary"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>
                                        #}{#{{ include('journal/_delete_form.html.twig') }}#}{#
                                    </div>
                                </div>#}

                                <div class="form-group col-lg-12">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <form method="post" action="{{ path('journal_delete', {'id': journal.id}) }}" onsubmit="return confirm('هل انت متأكد انك ترغب في حذف هذا العنصر؟');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ journal.id) }}">
                                            <button class="btn btn-danger"><i class="fa fa-trash " style="margin-left: 2rem"></i>{{  "Delete" | trans }}</button>
                                            <a href="{{ path('journal_edit', {'id': journal.id}) }}" class="btn btn-primary"><i class="fa fa-pencil" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                            <a href="{{ path('journal_index') }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>

                                        </form>

                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}

