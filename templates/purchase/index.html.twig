
 {% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "List of purchase"|trans }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('ajout-purchase') }}" class="btn btn-success">
                                        <i class="fa fa-plus" style="margin-left: 2rem"></i>{{ "Create new"|trans }}</a>
                                </p>
                                    <table  id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>{{ "Number of purchase"|trans }}</th>
                                                <th>{{ "Supplier"|trans }}</th>
                                                <th>{{ "Benificiary"|trans }}</th>
                                                <th>{{ "Date"|trans }}</th>
                                                <th>{{ "Total price"|trans }}</th>
                                                <th>{{ "Actions"|trans }}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for purchase in purchases %}
                                            <tr>
                                                <td>{{ purchase.number }}</td>
                                                <td>{{ purchase.supplier }}</td>
                                                <td>{{ purchase.employee }}</td>
                                                <td>{{ purchase.date ? purchase.date|date('Y-m-d') : '' }}</td>
                                                <td>{{ purchase.totalPrice }}</td>
                                                <td>
                                                    <a href="{{ path('purchase_show', {'id': purchase.id}) }}" class="btn btn-success">{{ "show"|trans }}</a>
                                                    <a href="{{ path('modifier-purchase', {'id': purchase.id}) }}" class="btn btn-warning">{{ "edit"|trans }}</a>
                                                    <a href="{{ path('linePurchase_detail', {'id': purchase.id}) }}" class="btn btn-info">{{ "detail"|trans }}</a>
                                                    <a href="{{ path('purchase_pdf', {'id': purchase.id}) }}" target="_blank" class="btn btn-danger">{{ "print"|trans }}</a>
                                                    <a href="{{ path('receive_pdf', {'id': purchase.id}) }}" target="_blank" class="btn btn-success">{{ "Print article receipt session"|trans }}</a>

                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="5">{{ "no records found"|trans }}</td>
                                            </tr>
                                                                        
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
