
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "List of demand"|trans }}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            {% include('layouts/flash-messages.html.twig') %}

                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('demand_new') }}" class="btn btn-success left"><i class="fa fa-plus" style="margin-left: 2rem"></i>{{ "Create new"|trans }}</a>
                                </p>
                                <br>
                                <div class="ln_solid"></div>

                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ "Date"|trans }}</th>
                                        <th>{{ "Supplier"|trans }}</th>
                                        <th>{{ "Tranche"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for demand in demands %}
                                        <tr>
                                            <td>{{ demand.date ? demand.date|date('Y-m-d') : '' }}</td>
                                            <td>{{ demand.supplier }}</td>
                                            <td>{{ demand.tranche }}</td>


                                            <td>
                                                <a href="{{ path('demand_show', {'id': demand.id}) }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-eye" style="margin-left: 2rem"></i>{{ "show"|trans }}</a>
                                                <a href="{{ path('demand_edit', {'id': demand.id}) }}" class="btn btn-primary"><i class="fa fa-edit" style="margin-left: 2rem"></i>{{ "edit"|trans }}</a>
                                                <a href="{{ path('printt_pdf', {'id': demand.id}) }}" target="_blank" class="btn btn-info"><i class="fa fa-print" style="margin-left: 2rem"></i>{{ "print"|trans }}</i>
                                                {# {{ "print"|trans }} #}
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr class="text-center">
                                            <td colspan="4">{{ "no records found"|trans }}</td>
                                        </tr>

                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
