
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Journal of meals"|trans }}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            
                            <div class="x_content">
                                <br/>

                                {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                                <fieldset>
                                    <legend>{{ "Number of meals"|trans }}</legend>
                                    <div class="row">
                                        <div class="well">
                                            {#<div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of meals"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>#}
                                            <div class="form-group">
                                                {{ form_label(form.nbMeal.date, "Date"|trans, {'label_attr': {'class': 'col-md-3 col-sm-3 col-xs-12 control-label'}}) }}
                                                {#{{ form_errors(form.created_at) }}#}
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.date) }}
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of resident studiants"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.std_resident,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of semi-resident studiants"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.std_semiResident,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of granted studiants"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.std_granted,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of professors"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.professor,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of curators"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.curators,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of employees"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nbMeal.employee,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <legend>{{ "Journal of meals"|trans }}</legend>
                                    <div class="row">
                                        <div class="well">
                                            <div class="form-group">
                                                {{ form_label(form.date, "Date"|trans, {'label_attr': {'class': 'col-md-3 col-sm-3 col-xs-12 control-label'}}) }}
                                                {{ form_errors(form.date) }}
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.date) }}
                                                </div>
                                            </div>

                                            {# <div class="form-group">
                                                 <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Day"|trans }}
                                                     <span class="required">*</span>
                                                 </label>
                                                 <div class="col-md-6 col-sm-6 col-xs-12">
                                                     {{ form_widget(form.menu,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                 </div>
                                             </div>#}

                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Total costs"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.exitt,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Total meals"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.total_meals,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            {# <div class="form-group">
                                                 <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Total students"|trans }}
                                                     <span class="required">*</span>
                                                 </label>
                                                 <div class="col-md-6 col-sm-6 col-xs-12">
                                                     {{ form_widget(form.totalStudents,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                 </div>
                                             </div>#}

                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Unit meal costs"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.unit_cost,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Remarque"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.remarque,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Day"|trans }}
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.menu,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>

                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                                        {{ include('journal/_form.html.twig') }}

                                        <a href="{{ path('journal_index') }}" class="btn btn-warning"><i class="fa fa-backward" style="margin-left: 2rem"></i>{{ "back to list"|trans }}</a>
                                    </div>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
    <div id="lock_screen">
        <table>
            <tr>
                <td>
                    <div class="clock"></div>
                    <span class="unlock">
                    <span class="fa-stack fa-5x">
                      <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                      <i id="icon_lock" class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                </span>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}

