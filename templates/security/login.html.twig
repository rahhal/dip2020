{% extends 'base.html.twig' %}

{% block title %}تسجيل الدخول{% endblock %}
{% block body_class %} class="login" {% endblock %}
{% block body %}
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <a class="hiddenanchor" id="reset"></a>

    <div class="login_wrapper"  >
        <div class="container" style="color: #0000cc;">
        <div class="animate form login_form" >
            {% include('layouts/flash-messages.html.twig') %}
            <section class="login_content">
                <form method="post">
                    <h1> تسجيل الدخول</h1>
                    <div>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">الخروج</a>
                            </div>
                        {% endif %}
                    </div>
                    <div>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="البريد الإلكتروني" required autofocus />
                    </div>
                    <div>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="كلمه السر" required="" />

                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div>
                        <button type="submit" class="btn btn-default submit">تسجيل الدخول</button>
                        <a class="reset_pass" href="{{ path('app_forgotten_password') }}">نسيت كلمة المرور</a>

                    </div>
                    <div class="clearfix"></div>

                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />
                        {#<span>  <a  href="#reset">ليس لديك حساب</a></span>#}
                       {# <br />
                        <br />#}
                        <div>
                            {# <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1> #}
                            <p>©2020 كل الحقوق محفوظة</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
    </div>
</div>

{% endblock %}
