

{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "budget" |trans }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">

                            {% include('layouts/flash-messages.html.twig') %}

                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('budget_new') }}" class="btn btn-success"><i class="fa fa-plus" style="margin-left: 2rem"></i>{{ "Create new" |trans }}</a>
                                </p>
                                <table  class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ "Date" |trans }}</th>
                                        <th> {{ "Year name" |trans }}</th>
                                        <th> {{ "Amount" |trans }}</th>
                                        <th> {{ "Actions" |trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for budget in budgets %}
                                        <tr>

                                            <td>{{ budget.year ? budget.year|date('Y-m-d') : '' }}</td>
                                            <td>{{ budget.name }}</td>
                                            <td>{{ budget.amount }}</td>
                                            <td>
                                                <a href="{{ path('budget_show', {'id': budget.id}) }} " class="btn btn-default" data-toggle="popover">
                                                    <i class="fa fa-eye" style="margin-left: 2rem"></i>{{  "show" | trans }}</a>
                                                <a href="{{ path('budget_edit', {'id': budget.id}) }}" class="btn btn-primary ">
                                                    <i class="fa fa-pencil" style="margin-left: 2rem"></i>{{  "edit" | trans }}</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr  class="text-center">
                                            <td colspan="4">{{ "no records found"|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
