
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>  تفصيل مادة :{{ article.name}}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th> {{ "Date"|trans }}</th>
                                        <td>{{ article.createdAt? article.createdAt|date('Y/m/d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th> {{ "Name"|trans }}</th>
                                        <td>{{ article.name }}</td>
                                    </tr>
                                    <tr>
                                        <th> {{ "Reference stock"|trans }}</th>
                                        <td>{{ article.referenceStock }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Unit"|trans }}</th>
                                        <td>{{ article.unit }} </td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Category"|trans }}</th>
                                        <td>{{ article.Category }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Initial quantity"|trans }}</th>
                                        <td>{{ article.iniQty }} </td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Quantity alerte"|trans }}</th>
                                        <td>{{ article.minQty }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                                    <div class="form-group">
                                            <div class="col-md-2 col-sm-2 col-xs-2 col-md-offset-3">
                                                {{ include('article/_delete_form.html.twig') }}
                                            </div>
                                                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary"><i class="fa fa-edit" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                                <a href="{{ path('article_new') }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}

