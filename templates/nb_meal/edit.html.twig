
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Number of meals today"|trans }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <br/>

                                {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                                <div class="form-group">
                                    {{ form_label(form.date, "Date"|trans, {'label_attr': {'class': 'col-md-3 col-sm-3 col-xs-12 control-label'}}) }}
                                    <div class="col-md-3 col-sm-3 col-xs-6">
                                        {{ form_widget(form.date) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.date) }}</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of resident studiants"|trans }}
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-6">
                                        {{ form_widget(form.std_resident,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.std_resident) }}</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of semi-resident studiants"|trans }}
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-6">
                                        {{ form_widget(form.std_semiResident,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.std_semiResident) }}</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of granted studiants"|trans }}
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-6">
                                        {{ form_widget(form.std_granted,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.std_granted) }}</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of professors"|trans }}
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-6">
                                        {{ form_widget(form.professor,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.professor) }}</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of curators"|trans }}
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-6">
                                        {{ form_widget(form.curators,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.curators) }}</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ "Number of employees"|trans }}
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-6">
                                        {{ form_widget(form.employee,{'attr': {'class':'form-control col-md-7 col-xs-12'} }) }}
                                        <div class="invalid-feedback text-danger">{{ form_errors(form.employee) }}</div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-12">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {#<button type="submit" class="btn btn-success"><i class="fa fa-edit" style="margin-left: 2rem"></i>{{ button_label|default('Update')|trans }}</button>#}
                                        {{ include('nb_meal/_form.html.twig') }}
                                        <a href="{{ path('nb_meal_new') }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>

                                    </div>
                                </div>
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}

