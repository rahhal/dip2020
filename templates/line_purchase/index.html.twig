
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "List of purchase"|trans }} </h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('purchase_index') }}" class="btn btn-success"><i class="fa fa-backward" style="margin-left: 2rem"></i>retour</a>
                                </p>
                                <table id="datatable-buttons" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ "Article"|trans }}</th>
                                        <th>{{ "Quantity required"|trans }}</th>
                                        <th>{{ "Quantity delivred"|trans }}</th>
                                        <th>{{ "Quantity"|trans }}</th>
                                        <th>{{ "Unit"|trans }}</th>
                                        <th>{{ "Unit price"|trans }}</th>
                                        <th>{{ "Tax"|trans }}</th>
                                        <th>{{ "Total price"|trans }}</th>
                                        <th>{{ "Prod date"|trans }}</th>
                                        <th>{{ "Valid date"|trans }}</th>
                                        <th>{{ "Technical confirmity"|trans }}</th>
                                        <th>{{ "Remarque"|trans }}</th>
                                       {# <th>actions</th>#}
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for line_purchase in line_purchases %}
                                        <tr>
                                            <td>{{ line_purchase.article }}</td>
                                            <td>{{ line_purchase.quantityRequired }}</td>
                                            <td>{{ line_purchase.quantityDelivred }}</td>
                                            <td>{{ line_purchase.unit }}</td>
                                            <td>{{ line_purchase.unitPrice }}</td>
                                            <td>{{ line_purchase.tax }}</td>
                                            <td>{{ line_purchase.TotalPrice }}</td>
                                            <td>{{ line_purchase.prodDte }}</td>
                                            <td>{{ line_purchase.exitDte }}</td>
                                            <td>{{ line_purchase.technicalConfirmity }}</td>
                                            <td>{{ line_purchase.remarque }}</td>
                                            {#<td>
                                                <a href="{{ path('line_purchase_show', {'id': line_purchase.id}) }}" class="btn btn-success">show</a>
                                                <a href="{{ path('line_purchase_edit', {'id': line_purchase.id}) }}" class="btn btn-warning">edit</a>
                                            </td>#}
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">{{ "no records found"|trans }}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
