
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3> {{ "budget"|trans }} {{ budget.name }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2> {{ "Budget information"|trans }}</h2>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <table class="table table-hover">
                                    <tbody>
                                   {# <tr>
                                        <th>{{ "Id"|trans }}</th>
                                        <td>{{ budget.id }}</td>
                                    </tr>#}
                                    <tr>
                                        <th>{{ "Date"|trans }}</th>
                                        <td>{{ budget.year ? budget.year|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Amount"|trans }}</th>
                                        <td>{{ budget.amount }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Year name"|trans }}</th>
                                        <td>{{ budget.name }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <div class="form-group col-lg-10">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-2 col-sm-2 col-xs-2 col-md-offset-3">

                                        {{ include('budget/_delete_form.html.twig') }}
                                    </div>
                                    <a href="{{ path('budget_edit', {'id': budget.id}) }}" class="btn btn-success"><i class="fa fa-edit" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                    <a href="{{ path('budget_index') }}" class="btn btn-primary"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
