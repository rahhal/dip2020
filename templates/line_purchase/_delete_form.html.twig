<form method="post" action="{{ path('line_purchase_delete', {'id': line_purchase.id}) }}" onsubmit="return confirm('هل انت متأكد انك ترغب في حذف هذا العنصر؟');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ line_purchase.id) }}">
