
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Details of purchases N°"|trans }}{{ purchase.number }}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>{{ "Date"|trans }}</th>
                                        <td>{{ purchase.date ? purchase.date|date('Y-m-d ') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Number of purchase"|trans }}</th>
                                        <td>{{ purchase.number }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Supplier"|trans }}</th>
                                        <td>{{ purchase.supplier }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Benificiary"|trans }}</th>
                                        <td>{{ purchase.employee }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Total price"|trans }}</th>
                                        <td>{{ purchase.totalPrice }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                                    <div class="form-group col-lg-12">
                                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                            <form method="post" action="{{ path('purchase_delete', {'id': purchase.id}) }}" onsubmit="return confirm('هل انت متأكد انك ترغب في حذف هذا العنصر؟');">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
                                                <button class="btn btn-danger"><i class="fa fa-trash " style="margin-left: 2rem"></i>{{  "Delete" | trans }}</button>
                                                <a href="{{ path('modifier-purchase', {'id': purchase.id}) }}" class="btn btn-primary"><i class="fa fa-pencil" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                                <a href="{{ path('purchase_index') }}" class="btn btn-default" data-toggle="popover"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>

                                            </form>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
