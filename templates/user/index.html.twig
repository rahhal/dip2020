

{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "List of users"|trans }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">

                            {% include('layouts/flash-messages.html.twig') %}
                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('user_new') }}" class="btn btn-success"><i class="fa fa-plus" style="margin-left: 2rem"></i>{{  "Create new" | trans }} </a>
                                </p>

                                {#<table  id="datatable" class="table table-striped table-bordered">#}
                                <table  id="table" class="table table-striped table-bordered">

                                <thead>
                                    <tr>

                                        <th>{{  "Company" | trans }}</th>
                                        <th>{{  "Director" | trans }}</th>
                                        <th>{{  " RIB" | trans }}</th>
                                        <th>{{  "Phone" | trans }}</th>
                                        <th>{{  "Address" | trans }}</th>
                                        <th>{{  "City" | trans }}</th>
                                        <th>{{  "Email" | trans }}</th>
                                        <th>{{  "Actions" | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.company }}</td>
                                            <td>{{ user.director }}</td>
                                            <td>{{ user.rIB }}</td>
                                            <td>{{ user.phone }}</td>
                                            <td>{{ user.address }}</td>
                                            <td>{{ user.city }}</td>
                                            <td>{{ user.email }}</td>

                                            <td>
                                                <a href="{{ path('user_show', {'id': user.id}) }} " class="btn btn-default btn-block" data-toggle="popover"><i class="fa fa-eye" style="margin-left: 2rem"></i>{{  "show" | trans }}</a>
                                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary btn-block"><i class="fa fa-pencil" style="margin-left: 2rem"></i>{{  "edit" | trans }}</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr class="text-center">
                                            <td colspan="8">{{  "no records found" | trans }}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
{% endblock %}
