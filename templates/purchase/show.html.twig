
{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Details of purchases N°"|trans }}{{ purchase.number }}</h3>
                    </div>

                   {# <div class="title_right">
                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="...البحث عن">
                                <span class="input-group-btn">
                                  <button class="btn btn-default" type="button">بحث</button>
                                </span>
                            </div>
                        </div>
                    </div>#}
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                {#<h2> {{ "Details of purchases N°"|trans }}{{ purchase.number }}</h2>#}
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                           aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">تنظیمات 1</a></li>
                                            <li><a href="#">تنظیمات 2</a></li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>{{ "Id"|trans }}</th>
                                        <td>{{ purchase.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Number of purchase"|trans }}</th>
                                        <td>{{ purchase.number }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Supplier"|trans }}</th>
                                        <td>{{ purchase.supplier }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Benificiary"|trans }}</th>
                                        <td>{{ purchase.employee }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ "Date"|trans }}</th>
                                        <td>{{ purchase.date ? purchase.date|date('Y-m-d ') : '' }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                               {# <a href="#" class="btn btn-success">{{ "edit"|trans }}</a>
                                <a href="{{ path('purchase_index') }}" class="btn btn-primary">{{ "back to list"|trans }}</a>
                                {{ include('purchase/_delete_form.html.twig') }}#}
                                {#<a href="{{ path('purchase_edit', {'id': purchase.id}) }}" class="btn btn-success">{{ "edit"|trans }}</a>#}


                                <div class="form-group col-lg-12">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {#<a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} Delete {% endtrans %}</a>#}

                                        {#{{ include('article/_delete_form.html.twig') }}#}
                                        <form method="post" action="{{ path('purchase_delete', {'id': purchase.id}) }}" onsubmit="return confirm({{  "Are you sure you want to delete this item?" | trans }});">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
                                            <button class="btn btn-danger"><i class="fa fa-trash " style="margin-left: 2rem"></i>{{  "Delete" | trans }}</button>
                                            <a href="#" class="btn btn-warning"><i class="fa fa-edit" style="margin-left: 2rem"></i>{% trans %} Update {% endtrans %}</a>
                                            <a href="{{ path('purchase_index') }}" class="btn btn-primary"><i class="fa fa-backward" style="margin-left: 2rem"></i>{% trans %} back to list {% endtrans %}</a>

                                        </form>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
    <div id="lock_screen">
        <table>
            <tr>
                <td>
                    <div class="clock"></div>
                    <span class="unlock">
                    <span class="fa-stack fa-5x">
                      <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                      <i id="icon_lock" class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                </span>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
