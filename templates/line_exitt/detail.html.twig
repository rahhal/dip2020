{% extends 'base.html.twig' %}

{% block title %} {{ app.user.email|upper }} {% endblock %}
{% block body_class %} class="nav-md" {% endblock %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col hidden-print">
                {% include('layouts/sidebar.html.twig') %}
            </div>
            {% include('layouts/navbar.html.twig') %}
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3>{{ "Details of exit"|trans }}</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    <a href="{{ path('exitt_index') }}" class="btn btn-success"><i class="fa fa-backward" style="margin-left: 2rem"></i>{{ "Retour"|trans }}</a>
                                </p>
                                <table id="datatable-buttons" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ "Article"|trans }}</th>
                                        <th>{{ "Quantity"|trans }}</th>
                                        {#<th>{{ "Actions"|trans }}</th>#}
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for line_exitt in lineExitts %}
                                        <tr>
                                            <td>{{ line_exitt.article }}</td>
                                            <td>{{ line_exitt.quantity }}</td>
                                            <td>
                                                {#<td>
                                                <a href="{{ path('line_exitt_show', {'id': line_exitt.id}) }}" class="btn btn-success">show</a>
                                                <a href="{{ path('line_exitt_edit', {'id': line_exitt.id}) }}" class="btn btn-warning">edit</a>
                                            </td>#}
                                        </tr>
                                    {% else %}
                                        <tr class="text-center">
                                            <td colspan="3">{{ "no records found"|trans }}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% include('layouts/footer.html.twig') %}
        </div>
    </div>
    <div id="lock_screen">
        <table>
            <tr>
                <td>
                    <div class="clock"></div>
                    <span class="unlock">
                    <span class="fa-stack fa-5x">
                      <i class="fa fa-square-o fa-stack-2x fa-inverse"></i>
                      <i id="icon_lock" class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                </span>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
